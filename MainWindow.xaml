<Window x:Class="BrickBreakerss.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="400" Width="600" WindowState="Maximized"
        KeyDown="window_KeyDown">


    <!--<StackPanel>
            <Menu>
                <MenuItem Header="CLASSIFICA" Click="cl"></MenuItem>
            </Menu>-->
    <Grid Name="cont_main">
        <Grid Name="contenitore" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <Button x:Name="cl_bt" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="0" Background="Red" Content="CLASSIFICA" Click="visual_cl" Width="200" FontWeight="Bold" FontSize="25"></Button>
            <Label Name="lb_user" FontWeight="Bold" Foreground="Black" Grid.ColumnSpan="2" Grid.Row="3" Content="User" FontSize="80" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Swis721 Blk BT" />
            <TextBox Name="tb_user" Grid.Row="3" Foreground="Red" Text=""  Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="75" Width="400" Height="100" FontWeight="Bold" FontFamily="Swis721 Blk BT"/>
            <!-- <Label Name="istruzioni" Foreground="White" Grid.Row="1" Visibility="Visible" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Swis721 Blk BT" Grid.ColumnSpan="2" Grid.RowSpan="3" Grid.Column="2" Content="Per giocare devi cliccare spazio, successivamente devi muovere la macchina in basso a destra e sinistra con le freccette, in modo da far rimbalzare Lewis su di essa e successivamente fargli colpire le macchine. Il gioco finisce se Lewis tocca terra o se non ci sono più macchine. Inoltre ci sono 4 bonus, Fia: si aumentano i punti; Toto: Lewis diventa più grande, W12: Lewis rimbalza solo sui bordi e non sulle macchine per 15 secondi, Bottas: Lewis diventa più veloce" ></Label>-->
            <Button Name="istruzioni" Background="Black" Foreground="Red" Content="Istruzioni" Width="250" Height="50" FontWeight="Bold" FontSize="25" Click="viewIstruzioni" Grid.Row="2" Visibility="Visible" Grid.RowSpan="1" Grid.Column="2"/>
            <Image Name="logo" Loaded="logo_Loaded" Source="Resources\Logo.png" HorizontalAlignment="Center" VerticalAlignment="Top" Width="900" Grid.ColumnSpan="3" Grid.RowSpan="3" Height="550"/>
            <Button x:Name="bt_start" Foreground="Red" FontWeight="Bold" FontFamily="Swis721 Blk BT" Content=" START " FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Center" Click="bt_start_Click" Grid.Row="4" Grid.ColumnSpan="3" />
            <TextBlock Name="tb_punti" FontWeight="Bold" VerticalAlignment="Top" Text="" FontSize="50" HorizontalAlignment="Left" Visibility="Hidden" Margin="200,0,0,0" RenderTransformOrigin="0.5,0.5" Width="161">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="-0.231"/>
                        <RotateTransform/>
                        <TranslateTransform Y="-0.163"/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
            <TextBlock Name="tb_infoMatch" FontWeight="Bold" VerticalAlignment="Top" Text="" FontSize="23" HorizontalAlignment="Left" Visibility="Hidden" Margin="320,0,0,0" RenderTransformOrigin="0.5,0.5" Width="10000000" Grid.ColumnSpan="3"/>

            <Canvas x:Name="cv_container" Grid.RowSpan="5" Grid.ColumnSpan="3">
            </Canvas>
        </Grid>
    </Grid>
</Window>
