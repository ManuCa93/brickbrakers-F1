<UserControl x:Class="BrickBreakerss.Classifica"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="cl_contenitore" Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="cl_bt" Grid.Row="1" Height="35" HorizontalAlignment="Center" Grid.Column="0" Background="Red" Content="INDIETRO" Click="home" Width="150" FontWeight="Bold" FontSize="25"></Button>
        <ListView ItemsSource="{Binding}" Name="lv" BorderBrush="Black" BorderThickness="5">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <TextBlock Text="{Binding Punteggio}" HorizontalAlignment="Center" FontSize="25" FontWeight="Bold" FontFamily="Swis721 Blk BT"></TextBlock>
                        <TextBlock Text="{Binding Username}" HorizontalAlignment="Center" FontSize="25" FontWeight="Bold" FontFamily="Swis721 Blk BT"></TextBlock>
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
